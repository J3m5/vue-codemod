{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    // "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,

    // "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
  
    /* If transpiling with TypeScript: */
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,

    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"],

    /* If you're building for a library: */
    "declaration": true,
    "removeComments": false,

    "types": ["jest", "jscodeshift", "node", "ast-types", "bun-types"],
    "rootDir": "."
  },
  "exclude": ["dist", "playground", "node_modules"]
}
